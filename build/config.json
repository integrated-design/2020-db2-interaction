{
	"path": {
		"src": "src",
		"dst": "deploy/DB2INTERACTION/2020"
	},

	"projects": [
		{
			"name": "",
			"ts": [
				{ "src": "app/ts/main", "dst": "app/js/script" },
				{ "src": "index/ts/main", "dst": "index/js/script" }
			],
			"scss": [
				{ "src": "app/scss/main", "dst": "app/css/style" },
				{ "src": "index/scss/main", "dst": "index/css/style" }
			],
			"html": [
				{ "src": "app/html/touch_b-release_a-rewind", "dst": "app/html/touch_b-release_a-rewind" },
				{ "src": "app/html/touch_b-release_a-sync", "dst": "app/html/touch_b-release_a-sync" },
				{ "src": "app/html/touch_play-release_stop", "dst": "app/html/touch_play-release_stop" }
			],
			"php": [
				{ "src": "index/php/main", "dst": "index" },
				{ "src": "app/html/touch_b-release_a-rewind", "dst": "app/html/touch_b-release_a-rewind" },
				{ "src": "app/html/touch_b-release_a-sync", "dst": "app/html/touch_b-release_a-sync" },
				{ "src": "app/html/touch_play-release_stop", "dst": "app/html/touch_play-release_stop" }
			],
			"static": [
				{ "src": "img/**/*", "dst": "img" },
				{ "src": "libs/**/*", "dst": "libs" },
				{ "src": "user/**/*", "dst": "user" },
				{ "src": "server_config/.htaccess", "dst": "" }
			]
		}
	],

	"server": {
		"port": 3000
	},

	"typeScriptOptions": {
		"target": "ES5",
		"lib": ["es6", "dom"],
		"types": ["jquery"],
		"typeRoots": [
			"src/@types",
			"src/libs"
		],
		"forceConsistentCasingInFileNames": true,
		"alwaysStrict": false,
		"removeComments": true,
		"sourceMap": true,
		"minify": true,
		"minifyOnly": false,
		"declaration": false
	},

	"sassOptions": {
		"sourceMap": true,
		"minify": true,
		"minifyOnly": false
	}
}
